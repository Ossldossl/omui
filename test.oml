// primary_button is a style class of the widget "Button"
primary_button(Button) {
    // in here you change the default property-values for the default (active) state
    background_color: #181818;
    text_determines_with: true;
    margin: (0, 10, 0, 10);
    border: 2;
    width: 100;
    height: 50;
    border-radius: 8;
    text-color: #FFFFFF;
    border-color: #444444;
}

// but you can also change property-values of other states
primary_button::HOVERED {
    transition: 200ms, easeOutSine;
    background-color: #444444;
}

primary_button::INACTVE {
    // no transition so we don't specify the transition property
    background_color: #101010;
    text_color: #999999;
}

// you can even "subclass" style-classes
// and also directly specify properties of other states without specifying the default (or ACTIVE) state
secondary_button(toggle_button) :: HOVERED {
    background-color: #FF00FF;
}

